@model OrderModel

@{
    ViewData["Title"] = "Проверка кода";
}

@await Html.PartialAsync("PartialDetails", Model)

<form action="@Url.Action(nameof(OrderController.ConfirmCellPhone))" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="cellPhone" value="@Model.CellPhone" />
    <div class="form-group">
        <label for="code">Код потдверждения</label>
        <input type="text" class="form-control" name="code" placeholder="0000" />
        @if (Model.Errors.ContainsKey("code"))
        {
            <small class="form-text text-danger">@Model.Errors["code"]</small>
        }
    </div>
    <button type="submit" class="btn btn-success">Подтвердить</button>
</form>

<p>
    Если вы не получили SMS с кодом, проверьте номер телефона и
    попробуйте ещё раз.
</p>
<form action="@Url.Action("SendConfirmation")" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        <label for="cellPhone">Мобильный телефон</label>
        <input type="text" class="form-control" name="cellPhone" placeholder="+79876543210" />
    </div>
    <button type="submit" class="btn btn-success">Отправить код</button>
</form>

